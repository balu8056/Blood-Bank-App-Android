<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragments.find_donar_loc.FindDonarFragment">
    <RelativeLayout
        android:id="@+id/findDonarRelative1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/findDonarUid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/copy_donar_id_from_home"
            android:layout_toStartOf="@+id/findDonarFindBtn"
            android:layout_centerVertical="true"
            android:autofillHints="" />
        <Button
            android:id="@+id/findDonarFindBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_search_category_default"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/foundDonarRel"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:visibility="gone">
        <include
            android:id="@+id/findDonarFoundDonar"
            layout="@layout/user_item_list"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_toStartOf="@+id/trackingRel" />

        <RelativeLayout
            android:id="@+id/trackingRel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cancelFoundDonar"
            android:visibility="gone">
            <Button
                android:id="@+id/track"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_location_searching_24"
                android:layout_centerVertical="true"
                android:visibility="visible"/>
            <Button
                android:id="@+id/unTrack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_location_disabled_24"
                android:layout_centerVertical="true"
                android:visibility="gone" />
        </RelativeLayout>
        <Button
            android:id="@+id/cancelFoundDonar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_cancel_24"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp" >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingFullScreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_fullscreen_24"
            app:backgroundTint="@android:color/transparent"
            app:fabCustomSize="40dp"
            app:maxImageSize="40dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingExitFullScreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_fullscreen_exit_24"
            app:backgroundTint="@android:color/transparent"
            app:fabCustomSize="40dp"
            app:maxImageSize="40dp"
            android:visibility="gone"/>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/findDonarMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <ProgressBar
            android:id="@+id/findDonarMapProgress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>